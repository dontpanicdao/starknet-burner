{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"module": "ES2022",
		"moduleResolution": "Node",
		"noEmit": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2015",
		"types": [
			"vite/client"
		],
		"useDefineForClassFields": true
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"src/**/*.ts"
	]
}